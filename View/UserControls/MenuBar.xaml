<UserControl x:Class="Txtrmap.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Txtrmap.View.UserControls"
             mc:Ignorable="d" 
             d:Height="80" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Open File" Click="btnOpen"/>
                    <MenuItem Header="Save File" Click="btnSave"/>
                    <MenuItem Header="Exit" Click="btnExit"/>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</UserControl>
